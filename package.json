{
  "name": "@horacehylee/firebase-db",
  "version": "1.0.1",
  "description": "Firebase database CRUD helper",
  "main": "lib/firebase-db.js",
  "files": [
    "lib"
  ],
  "types": "lib/types/index.d.ts",
  "scripts": {
    "build": "webpack --env dev && webpack --env build",
    "serve": "webpack --progress --colors --watch --env dev",
    "test": "mocha --recursive --require ts-node/register --colors ./**/*.spec.ts",
    "test:watch": "mocha --recursive --require ts-node/register --colors -w ./**/*.spec.ts",
    "doc:gen": "typedoc --out dist/docs --target es6 --theme minimal --mode file src --exclude \"**/*.spec.ts\" --excludeNotExported",
    "doc:deploy": "ts-node tools/gh-pages-publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/horacehylee/firebase-db.git"
  },
  "keywords": [
    "firebase",
    "nodejs",
    "crud",
    "webpack",
    "typescript",
    "library",
    "universal",
    "umd",
    "commonjs"
  ],
  "author": "Horace Lee",
  "license": "MIT",
  "dependencies": {
    "date-fns": "1.29.0",
    "firebase-admin": "5.2.1",
